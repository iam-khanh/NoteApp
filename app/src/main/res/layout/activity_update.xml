<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="16dp"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/txtNoteHeading"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/poppins"
        android:text="Update Note. " />

    <ImageView
        android:id="@+id/btnupdatesave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/btnupdatesave"
        app:srcCompat="@drawable/icon_done" />

    <EditText
        android:id="@+id/edtupdatetitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/txtNoteHeading"
        android:textSize="20sp"
        android:ems="10"
        android:padding="12dp"
        android:inputType="text"
        android:background="@drawable/orangeborder"
        android:maxLines="1"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/poppins"
        android:hint="Enter the Title" />

    <EditText
        android:id="@+id/edtupdatecontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/orangeborder"
        android:layout_below="@id/edtupdatetitle"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:padding="12dp"
        android:hint="Enter The Description" />
</RelativeLayout>